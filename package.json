{
  "name": "metalize",
  "version": "0.0.5",
  "description": "Node.js tool for easy work with database metadata",
  "author": {
    "name": "Andrew Vereshchak",
    "email": "andrew.vereshchak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/multum/metalize.git"
  },
  "homepage": "https://multum.github.io/metalize",
  "bugs": "https://github.com/multum/metalize/issues",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "keywords": [
    "metalize",
    "database",
    "metadata",
    "postgres",
    "mysql"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "test-runner": "mocha --timeout 10000 --exit",
    "test": "npm run test-runner test/**/index.test.js",
    "test/mysql": "npm run test-runner test/mysql/index.test.js",
    "test/postgres": "npm run test-runner test/postgres/index.test.js",
    "eslint": "eslint --max-warnings=0 **/*.js",
    "format": "prettier --write **/*.js",
    "docs::start": "docsify serve docs"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "mocha": "^7.1.0",
    "mysql2": "^2.1.0",
    "pg": "^7.18.2",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
