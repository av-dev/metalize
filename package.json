{
  "name": "metalize",
  "version": "0.0.1",
  "description": "Node.js tool for easy work with database metadata",
  "author": {
    "name": "Andrey Vereshchak",
    "email": "vereschak@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/av-dev/metalize.git"
  },
  "homepage": "https://av-dev.github.io/metalize",
  "bugs": "https://github.com/av-dev/metalize/issues",
  "main": "lib/index.js",
  "types": "types/index.d.ts",
  "files": [
    "lib",
    "types"
  ],
  "keywords": [
    "metalize",
    "database",
    "metadata",
    "postgres",
    "mysql"
  ],
  "engines": {
    "node": ">=8.10"
  },
  "scripts": {
    "test": "mocha test/**/index.test.js --no-timeout --exit",
    "eslint": "eslint --max-warnings=0 **/*.js",
    "lint-staged": "lint-staged",
    "format": "prettier --write **/*.js"
  },
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.3.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2",
    "pg": "^7.12.1",
    "mysql2": "^1.7.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm-run-all lint-staged --parallel eslint test"
    }
  },
  "lint-staged": {
    "*.{js,md,css,html}": [
      "prettier --trailing-comma es5 --single-quote --write",
      "git add"
    ]
  }
}
